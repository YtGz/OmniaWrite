{
  "name": "omniawrite",
  "version": "1.3.2",
  "type": "module",
  "main": "./src/electron.cjs",
  "author": {
    "name": "OmniaWrite",
    "email": "info@omniawrite.com",
    "url": "https://omniawrite.com"
  },
  "description": "A text editor engineered for creative writing.",
  "homepage": "https://www.omniawrite.com/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/torstendittmann/omniawrite"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@ytgz/omnia-editor": "file:ytgz-omnia-editor-1.0.0.tgz",
    "omnia-ebook-generator": "^0.2.1",
    "semver": "^7.3.5",
    "sortablejs": "^1.13.0",
    "sveltejs-tippy": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@keenmate/svelte-spa-router": "^5.1.1",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^10.2.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/svelte": "^10.2.9",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.1",
    "appwrite": "^22.3.1",
    "date-fns": "^4.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^10.0.0",
    "eslint-plugin-svelte": "^3.9.0",
    "file-saver": "^2.0.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "license-checker": "^25.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.32.8",
    "svelte": "^5.51.3",
    "svelte-i18n": "^4.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "scripts": {
    "build": "run-s prepare:* svelte-build",
    "build:cap": "run-s build cap:sync",
    "dev": "bunx --bun vite --port 8080",
    "electron": "run-s build pure-electron",
    "test": "vitest run",
    "svelte-build": "bunx --bun vite build",
    "prepare:license": "license-checker --exclude \"MIT\" --json --customPath ./src/licenses.json > ./src/licenses.json",
    "pure-electron": "electron .",
    "cap:sync": "cap sync",
    "lint": "eslint src/",
    "prettier": "prettier --write --plugin-search-dir= ./src/**/*.{js,svelte,json,scss}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "preview": "bunx --bun vite preview --port 8080"
  },
  "build": {
    "appId": "com.omniawrite.app",
    "productName": "OmniaWrite",
    "compression": "normal",
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "torstendittmann",
      "repo": "omniawrite"
    },
    "linux": {
      "desktop": "OmniaWrite",
      "category": "Office",
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {}
  }
}
