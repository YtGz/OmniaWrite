{
  "name": "omniawrite",
  "version": "1.3.2",
  "main": "./src/electron.js",
  "author": {
    "name": "OmniaWrite",
    "email": "info@omniawrite.com",
    "url": "https://omniawrite.com"
  },
  "description": "A text editor engineered for creative writing.",
  "homepage": "https://www.omniawrite.com/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/torstendittmann/omniawrite"
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",

    "omnia-ebook-generator": "^0.2.1",
    "omnia-editor": "^1.0.0-beta.1",
    "semver": "^7.3.5",
    "sortablejs": "^1.13.0",
    "sveltejs-tippy": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^10.2.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/svelte": "^10.2.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.1",
    "@types/jest": "^30.0.0",
    "appwrite": "^22.3.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "@eslint/js": "^10.0.0",
    "eslint": "^10.0.0",
    "eslint-plugin-svelte": "^3.9.0",
    "globals": "^16.2.0",
    "file-loader": "^6.2.0",
    "file-saver": "^2.0.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "license-checker": "^25.0.1",
    "mini-css-extract-plugin": "^2.10.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.32.8",
    "sass-loader": "^16.0.7",
    "style-loader": "^4.0.0",
    "svelte": "^5.51.3",
    "svelte-htm": "^1.1.1",
    "svelte-i18n": "^4.0.1",
    "svelte-jester": "^5.0.0",
    "svelte-loader": "^3.2.4",
    "svelte-preprocess": "^6.0.3",
    "svelte-spa-router": "^4.0.1",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3",
    "workbox-webpack-plugin": "^7.4.0",
    "workbox-window": "^7.4.0"
  },
  "scripts": {
    "build": "run-s prepare:* svelte-build",
    "build:cap": "run-s build cap:sync",
    "dev": "webpack-dev-server --content-base public",
    "electron": "run-s build pure-electron",
    "test": "jest",
    "svelte-build": "cross-env NODE_ENV=production webpack",
    "prepare:license": "license-checker --exclude \"MIT\" --json --customPath ./src/licenses.json > ./src/licenses.json",
    "pure-electron": "electron .",
    "cap:sync": "cap sync",
    "lint": "eslint src/",
    "prettier": "prettier --write --plugin-search-dir= ./src/**/*.{js,svelte,json,scss}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "build": {
    "appId": "com.omniawrite.app",
    "productName": "OmniaWrite",
    "compression": "normal",
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "torstendittmann",
      "repo": "omniawrite"
    },
    "linux": {
      "desktop": "OmniaWrite",
      "category": "Office",
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {}
  }
}
